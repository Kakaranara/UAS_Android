<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardCodedText"
    android:id="@+id/fragmentContainer"
    tools:context=".UserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent=".70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_right_corner_navbar"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_home_nav"
                android:padding="10dp"
                android:src="@drawable/green_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/btnHome"
                style="@style/button3Navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navbar_selected"
                android:src="@drawable/white_home"
                android:text="Home"
                app:layout_constraintTop_toBottomOf="@id/homeBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/navbar_selected"
                android:src="@drawable/white_logout"
                style="@style/button3Navbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="50dp"
            app:layout_constraintStart_toEndOf="@id/navbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toTopOf="@id/user_container_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.fragment.app.FragmentContainerView

                android:id="@+id/user_container_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/nama_bisnis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Bisnis"
                    android:fontFamily="@font/nunito_black"
                    android:textColor="@color/dark_blue"
                    android:textSize="30sp"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Items"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toBottomOf="@id/nama_bisnis"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_cart"
        android:background="@color/dark_blue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent=".30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Bisnis"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_black"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders #00001"
            android:fontFamily="@font/nunito_sans_extralight"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/shop_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TableLayout
            android:id="@+id/orders_list_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="@color/dark_blue"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"

            app:layout_constraintTop_toBottomOf="@id/order_id"
            app:layout_constraintBottom_toTopOf="@id/result_and_button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TableRow
                android:background="@color/dark_blue">
                <TextView
                    android:text="Qty"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/nunito_black"
                    android:paddingVertical="10dp" />
                <TextView
                    android:text="Item List"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_black"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp" />
                <TextView
                    android:text="Price"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_black"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp" />
            </TableRow>
            <TableRow
                android:background="@color/dark_blue">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/qty_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="0dp">

                    <EditText
                        style="@style/editTextBlueBackground"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth="40dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/product_order_image"
                        android:layout_height="wrap_content"
                        android:layout_width="50dp"
                        android:src="@mipmap/ic_launcher"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintWidth_percent=".6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:text="Menu 1"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/nunito_sans_extralight"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:text="Rp 20.000"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/nunito_sans_extralight"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:fontFamily="@font/nunito_sans_extralight"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="20dp"
                    android:text="Rp. 40.000"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </TableRow>
            <TableRow
                android:background="@color/dark_blue">
                <EditText
                    android:hint="Notes..."
                    android:layout_span="2"
                    style="@style/editTextBlueBackground"
                    android:fontFamily="@font/nunito_sans_extralight"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp" />

                <TextView
                    android:text="Rp. 40.000"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_black"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp" />
            </TableRow>
        </TableLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_and_button_layout"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".3">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/proceed_button">
                <TextView
                    android:id="@+id/discount_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Discount"
                    android:fontFamily="@font/nunito_black"
                    app:layout_constraintWidth_percent=".70"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/discount"
                    app:layout_constraintBottom_toTopOf="@id/sub_total_label"/>
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 0"
                    app:layout_constraintWidth_percent=".30"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/discount_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/sub_total"/>
                <TextView
                    android:id="@+id/sub_total_label"
                    android:layout_width="-0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sub Total"
                    app:layout_constraintWidth_percent=".70"
                    android:fontFamily="@font/nunito_black"
                    app:layout_constraintTop_toBottomOf="@id/discount_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sub_total"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/sub_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 40.000"
                    app:layout_constraintWidth_percent=".30"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toBottomOf="@id/discount"
                    app:layout_constraintStart_toEndOf="@id/sub_total_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/proceed_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED TO ORDERS"
                android:paddingHorizontal="10dp"
style="@style/buttonProceed"
                android:fontFamily="@font/nunito_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>