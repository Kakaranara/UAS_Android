    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recycler_view"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".67"
        android:padding="20dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_cart"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_cart"
        android:background="@color/dark_blue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent=".33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/products_recycler_view"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TokkiDoki Resto"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders #00001"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/shop_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TableLayout
            android:id="@+id/orders_list_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="@color/dark_blue"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"

            app:layout_constraintTop_toBottomOf="@id/order_id"
            app:layout_constraintBottom_toTopOf="@id/result_and_button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TableRow
                android:background="@color/dark_blue">
                <TextView
                    android:text="Qty"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp" />
                <TextView
                    android:text="Item List"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp" />
                <TextView
                    android:text="Price"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp" />
            </TableRow>
            <TableRow
                android:background="@color/dark_blue">
                <TextView
                    android:text="2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="20dp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/product_order_image"
                        android:layout_height="wrap_content"
                        android:layout_width="50dp"
                        android:src="@mipmap/ic_launcher"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintWidth_percent=".6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:text="Menu 1"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:text="Rp 20.000"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:text="Rp. 40.000"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="20dp" />
            </TableRow>
            <TableRow
                android:background="@color/dark_blue">
                <EditText
                    android:background="@color/gray"
                    android:hint="Notes..."
                    android:textColorHint="@color/black"
                    android:layout_span="2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp" />

                <TextView
                    android:text="Rp. 40.000"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp" />
            </TableRow>
        </TableLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_and_button_layout"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".3">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/proceed_button">
                <TextView
                    android:id="@+id/discount_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Discount"
                    app:layout_constraintWidth_percent=".70"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/discount"
                    app:layout_constraintBottom_toTopOf="@id/sub_total_label"/>
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 0"
                    app:layout_constraintWidth_percent=".30"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/discount_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/sub_total"/>
                <TextView
                    android:id="@+id/sub_total_label"
                    android:layout_width="-0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sub Total"
                    app:layout_constraintWidth_percent=".70"

                    app:layout_constraintTop_toBottomOf="@id/discount_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sub_total"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/sub_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 40.000"
                    app:layout_constraintWidth_percent=".30"

                    app:layout_constraintTop_toBottomOf="@id/discount"
                    app:layout_constraintStart_toEndOf="@id/sub_total_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
                <Button
                    android:id="@+id/proceed_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonForLoginRegister"
                    android:text="PROCEED TO ORDERS"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>