<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardCodedText"
    android:id="@+id/fragmentContainer"
    tools:context=".UserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent=".70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_right_corner_navbar"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_home_nav"
                android:padding="10dp"
                android:src="@drawable/green_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/btnHome"
                style="@style/button3Navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navbar_selected"
                android:src="@drawable/white_home"
                android:text="Home"
                app:layout_constraintTop_toBottomOf="@id/homeBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/navbar_selected"
                android:src="@drawable/white_logout"
                android:onClick="logout"
                style="@style/button3Navbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="50dp"
            app:layout_constraintStart_toEndOf="@id/navbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toTopOf="@id/user_container_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <fragment

                android:id="@+id/user_container_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                app:defaultNavHost="true"
                app:navGraph="@navigation/nav_user"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/nama_bisnis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Bisnis"
                    android:fontFamily="@font/nunito_black"
                    android:textColor="@color/dark_blue"
                    android:textSize="30sp"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/business_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="no business id yet"
                    android:textSize="30sp"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/subtitle"/>
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Menu"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toBottomOf="@id/nama_bisnis"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_cart"
        android:background="@color/dark_blue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent=".30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Bisnis"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_black"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders #00001"
            android:fontFamily="@font/nunito_sans_extralight"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/shop_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/order_id"
            app:layout_constraintBottom_toTopOf="@id/result_and_button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_layout"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/separator">
                <TextView
                    android:id="@+id/qty_title"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".2"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/nunito_black"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/list_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/list_title"
                    android:text="Item List"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_black"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/qty_title"
                    app:layout_constraintEnd_toStartOf="@id/price_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/price_title"
                    android:text="Price"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_black"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/list_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                app:layout_constraintTop_toBottomOf="@id/title_layout"
                app:layout_constraintBottom_toTopOf="@id/cart_list_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_and_button_layout"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".3">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/proceed_button">
                <TextView
                    android:id="@+id/discount_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Discount"
                    android:fontFamily="@font/nunito_black"
                    app:layout_constraintWidth_percent=".70"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/discount"
                    app:layout_constraintBottom_toTopOf="@id/sub_total_label"/>
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 0"
                    app:layout_constraintWidth_percent=".30"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/discount_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/sub_total"/>
                <TextView
                    android:id="@+id/sub_total_label"
                    android:layout_width="-0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sub Total"
                    app:layout_constraintWidth_percent=".70"
                    android:fontFamily="@font/nunito_black"
                    app:layout_constraintTop_toBottomOf="@id/discount_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sub_total"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/sub_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Rp 0"
                    app:layout_constraintWidth_percent=".30"
                    android:fontFamily="@font/nunito_sans_extralight"
                    app:layout_constraintTop_toBottomOf="@id/discount"
                    app:layout_constraintStart_toEndOf="@id/sub_total_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/proceed_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED TO ORDERS"
                android:paddingHorizontal="10dp"
style="@style/buttonProceed"
                android:fontFamily="@font/nunito_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>