<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXTS -->
    <style name="TextMain">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="textLoginDesc">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">8sp</item>
    </style>
    <style name="editTextInputLogin">
        <item name="android:minHeight">48dp</item>
        <item name="android:ems">@integer/material_motion_duration_long_1</item>
        <item name="android:background">@drawable/rounded_corner_edit_text</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!-- BUTTONS -->
    <style name="buttonForLoginRegister">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:backgroundTint">@color/aquamarine</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="buttonMain">
        <item name="backgroundTint">@color/aquamarine</item>
        <item name="background">@drawable/rounded_corner_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="button3Navbar">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="buttonTransparent">
        <item name="android:background">@drawable/rounded_corner_transparent</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="backgroundTint">@null</item>
    </style>


    <!-- IMAGES -->
    <style name="roundedImageViewRounded">
        <item name="cornerSize">50%</item>
    </style>
</resources>